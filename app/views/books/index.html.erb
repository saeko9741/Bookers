<h2>Books</h2>
      <table>
      	<tr>
      		<th>title</th><th>body</th>
      	</tr>

        <% @books.each do |book| %>
      	<tr>
      		<td><%= book.title %></td>
      		<td><%= book.body %></td>
      		<td><%=link_to "show", book_path(book), :style=>"color:black;"%>
      		<%=link_to "edit", edit_book_path(book), :style=>"color:black;"%>
      		<%=link_to "destroy", book_path(book), :style=>"color:black;", method: :delete,"data-confirm" => "Are you sure?" %></td>
      	</tr>

        <% end %>
      </table>






<h3>New book</h3>
<!-- エラー表示 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

<!-- form_for部分 -->

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>

<% end %>


